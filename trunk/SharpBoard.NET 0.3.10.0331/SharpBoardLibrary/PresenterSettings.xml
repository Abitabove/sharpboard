<?xml version="1.0" encoding="utf-8"?>
<Actions>
	<Action type="Keys" description="BackSpace" keys="{BS}">
		<FiredBy type="Accelerometer" direction="LeftMove" />
		<FiredBy type="WiimoteButtons" button="Plus" />
	</Action>
	<Action type="Keys" description="Ctrl-C (two key combo: copy)" keys="^c">
		<FiredBy type="WiimoteButtons" button="Minus" />
	</Action>
	<Action type="Keys" description="Ctrl-Shift-F12 (Three key combo: Print on Notepad)" keys="^+F12">
		<FiredBy type="WiimoteButtons" button="Home" />
	</Action>
	<Action type="Mouse" description="Left Mouse Button" button="Left">
		<FiredBy type="WiimoteButtons" button="A" />
	</Action>
	<Action type="Mouse" description="Right Mouse Button" button="Right">
		<FiredBy type="WiimoteButtons" button="B" />
	</Action>
	<Action type="Process" description="Launch Notepad" cmdLine="notepad.exe">
		<FiredBy type="WiimoteButtons" button="One" />
	</Action>
	<Action type="Toogle" description="Toogle IR On" feature="CursorOnly" action="On">
		<FiredBy type="WiimoteButtons" button="Two" />
	</Action>
</Actions>